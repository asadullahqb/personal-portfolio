{
  "name": "personal-portfolio-monorepo",
  "version": "1.0.0",
  "description": "Personal portfolio with Next.js frontend and FastAPI backend",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm start",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "deploy:render": "cd backend && git push render main",
    "deploy:vercel": "cd frontend && vercel --prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}